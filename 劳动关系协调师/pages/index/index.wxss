page {
  background: #f4f8f9;
}

.live-show {
  position: absolute;
  width: 100%;
  height: 422rpx;
  z-index:120;
  top: 0rpx;
  left: 0rpx;
  opacity: 1;
}

.live-play {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  top: 120rpx;
  left: 315rpx;
  z-index:140;
}

.live-bottom{
  position: absolute;
  top:342rpx;
  color:white;
  height:80rpx;
  line-height: 80rpx;
  width:100%;
  font-size:35rpx;
  z-index:140;
}

.text1,.text2{
  height:80rpx;
  line-height: 80rpx;
  display: float;
  float:left;
}

.text1{
  width:350rpx;
  padding-left:20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text2{
  width:350rpx;
  padding-right:20rpx;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.past{
  background: white;
  width:100%;
  height:80rpx;
  margin-top:442rpx;
  border-bottom: 1rpx solid #ececec;
}

.past-img,.past-text{
  display: float;
  float:left;
}

.past-img{
  width:50rpx;
  height:50rpx;
  margin-top:15rpx;
  margin-left:25rpx;
}

.past-text{
  height:80rpx;
  line-height: 80rpx;
  font-size:35rpx;
  letter-spacing: 2rpx;
  margin-left:30rpx;
}

.hasNoVideo{
  width:100%;
  height:400rpx;
  line-height: 400rpx;
  text-align: center;
  color:rgb(131, 129, 129);
  font-size:35rpx;
  letter-spacing: 2rpx;
  background: white;
}

.list{
  padding-left:10rpx;
  background: white;
}

.video{
  display: float;
  float:left;
  width:320rpx;
  height:180rpx;
  margin-left:30rpx;
  margin-top:50rpx;
}

.video-img-big{
  position: relative;
  z-index:100;
  width:320rpx;
  height:180rpx;
  top:0rpx;
  left:0rpx;
}

.video-img-small{
  position: relative;
  width: 70rpx;
  height: 70rpx;
  opacity: 0.5;
  top:-140rpx;
  left: 130rpx;
  z-index:140;
}

.video-title{
  position: relative;
  width:100%;
  height:25rpx;
  font-size:25rpx;
  line-height: 25rpx;
  text-align: center;
  top:-110rpx;
  z-index:140;
}

.time{
  position:relative;
  width:190rpx;
  height:30rpx;
  text-align: center;
  line-height: 30rpx;
  color:white;
  background: #36d901;
  font-size:25rpx;
  top:-270rpx;
  left: 130rpx;
  z-index:140;
}

