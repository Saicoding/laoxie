live-player {
  width: 100%;
  height: 422rpx;
}

.control {
  width: 100%;
  height: 422rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.control-up {
  font-size: 25rpx;
  color: white;
  margin-top: 10rpx;
}

.control-down {
  width: 100%;
  height: 50rpx;
  margin-top: 155rpx;
}


.control-up-text {
  border: 4rpx solid white;
  height: 30rpx;
  line-height: 30rpx;
  width: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  margin-left: 650rpx;
}

.control-button {
  display: float;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
}

.fullScreen-control{
  font-size: 28rpx;
  color:white;
  margin-top:120rpx;
  position: absolute;
  text-align: center;
  line-height:750rpx;
  z-index: 800;
}

.model{
  font-size: 28rpx;
  color:white;
  margin-top:120rpx;
  position: absolute;
  line-height:750rpx;
  z-index: 801;
  background: radial-gradient(rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0.3) 40%); /* 标准的语法 */
}

.back{
  width:40rpx;
  height:40rpx;
  transform:rotate(90deg);
  margin-left:680rpx;
}