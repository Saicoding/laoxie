live-player {
  width: 100%;
  height: 422rpx;
}

.control {
  width: 100%;
  height: 422rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.control-up {
  font-size: 25rpx;
  color: white;
  margin-top: 10rpx;
}

.control-down {
  width: 100%;
  height: 50rpx;
  margin-top: 155rpx;
}

.prompt{
  font-size: 28rpx;
  width: 100%;
  height: 50rpx;
  color:white;
  text-align: center;
  line-height: 50rpx;
  margin-top:120rpx;
}

.control-up-text {
  border: 4rpx solid white;
  height: 30rpx;
  line-height: 30rpx;
  width: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  margin-left: 650rpx;
}

.control-button {
  display: float;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
}

.fullScreen-control{
  width:100%;
  height:100%;
  background:red;
}